<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginViewController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox alignment="CENTER" prefHeight="140.0" prefWidth="300.0">
               <children>
                  <Label text="İstifadəçi adı">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" maxWidth="200.0" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 0;" />
                  <Label text="Parol">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" maxWidth="200.0" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 0;" />
               </children>
            </VBox>
         </center>
         <bottom>
            <ButtonBar prefHeight="45.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="okButton" mnemonicParsing="false" onAction="#handleOkButtonClicked" style="-fx-background-radius: 0;" text="OK" />
                  <Button fx:id="cancelButton" layoutX="235.0" layoutY="18.0" mnemonicParsing="false" onAction="#handleCancelButtonClicked" style="-fx-background-radius: 0;" text="Cancel" />
              </buttons>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
